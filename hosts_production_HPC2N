# Inventory for the production pipeline in HPC2N

masternode ansible_ssh_host=hio-prod

workernode1 ansible_ssh_host=hio-worker-prod-1
workernode2 ansible_ssh_host=hio-worker-prod-2
workernode3 ansible_ssh_host=hio-worker-prod-3
workernode4 ansible_ssh_host=hio-worker-prod-4
workernode5 ansible_ssh_host=hio-worker-prod-5
workernode6 ansible_ssh_host=hio-worker-prod-6

[master]
masternode ansible_connection=ssh ansible_user=ubuntu

[master:vars]
ansible_python_interpreter=/usr/bin/python3

[workers]
workernode1 ansible_connection=ssh ansible_user=ubuntu
workernode2 ansible_connection=ssh ansible_user=ubuntu
workernode3 ansible_connection=ssh ansible_user=ubuntu
workernode4 ansible_connection=ssh ansible_user=ubuntu
workernode5 ansible_connection=ssh ansible_user=ubuntu
workernode6 ansible_connection=ssh ansible_user=ubuntu

[workers:vars]
ansible_python_interpreter=/usr/bin/python3
